<security-domain name="LearnyAuth" cache-type="default">
                    <authentication>
                        <login-module code="org.jboss.security.auth.spi.DatabaseServerLoginModule" flag="required">
                            <module-option name="dsJndiName" value="java:/LearnyDS"/>
                            <module-option name="principalsQuery" value="select PASSWORD from USER where EMAIL=?"/>
                            <module-option name="rolesQuery" value="select ROLE, 'Roles' from USER WHERE EMAIL=?"/>
                           <!-- <module-option name="hashAlgorithm" value="SHA-256"/>
                            <module-option name="hashEncoding" value="base64"/> -->
                        </login-module>
                    </authentication>
                </security-domain>

